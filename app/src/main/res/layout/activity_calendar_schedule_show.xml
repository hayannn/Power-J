<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ffffff"
            android:theme="@style/Theme.AppCompat">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/mainlogo" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_calendar_schedule_show_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0000/00/00"
            android:textSize="30dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <TextView
        android:id="@+id/tv_calendar_schedule_show_content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="일정"
        android:textSize="20dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_calendar_schedule_show_content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="정확한 시간"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_calendar_schedule_show_content3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시간대"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/btn_calendar_schedule_show_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:layout_gravity="center"/>

</LinearLayout>